printf '\033]707;{{fg_highlight|slashedhex}}\007' # underline
printf '\033]12;{{cyan|slashedhex}}\007'          # cursor

printf '\033]4;8;{{fg_comment|slashedhex}}\007'   # dark grey
printf '\033]4;0;{{bg_jump|slashedhex}}\007'      # black

printf '\033]4;15;{{fg_peak|slashedhex}}\007'     # white
printf '\033]4;7;{{fg_highlight|slashedhex}}\007' # light grey

printf '\033]4;9;{{red|slashedhex}}\007'          # red
